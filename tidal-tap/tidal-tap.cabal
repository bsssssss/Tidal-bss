category:           Sound
build-type:         Simple
extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall -threaded

executable tidal-tap
    import:           warnings
    main-is:          Main.hs
    -- other-modules:
    -- other-extensions:
    ghc-options: -Wall -threaded
    build-depends:    base >=4.8 && <5,
                      hosc >= 0.21 && < 0.22,
                      network,
                      vty,
                      vty-crossplatform,
                      time,
                      PortMidi,
                      optparse-applicative
    hs-source-dirs:   app
    default-language: Haskell2010
