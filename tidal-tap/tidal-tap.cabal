cabal-version:      2.0
name:               tidal-tap
version:            0.1.0.0
-- synopsis:
-- description:
homepage:           https://tidalcycles.org/
license:            AGPL-3.0-or-later
license-file:       LICENSE
author:             Alex McLean
maintainer:         alex@slab.org
